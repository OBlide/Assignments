<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        >

        <Toolbar
            android:elevation="5dp"
            android:id="@+id/toolB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/viewTitle"
                    android:text="Lab 1 More UI"
                    android:gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/toolbarBtn"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="#ffff"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Btn"
                    android:textColor="#000000"
                    android:textSize="15dp"

                    >
                </Button>

            </LinearLayout>

        </Toolbar>


        <EditText
            android:id="@+id/textEditor"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/toolB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Write your some text"
            android:textColorHint="#ffff"
            android:background="@color/colorPrimary"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:paddingLeft="10dp"
            >
        </EditText>

        <Button
            android:id="@+id/testingBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/textEditor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorPrimaryDark"
            android:text="Testing"
            android:gravity="center"
            android:textColor="#FFFF"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            >
        </Button>

        <RelativeLayout
            android:id="@+id/testingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testingBtn"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/loremText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textColor="#000000"
                android:text="\nLorem Ipsum\nLorem Ipsum\nLorem Ipsum\nLorem Ipsum\nLorem Ipsum\nLorem Ipsum"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginEnd="35dp"
                />

            <CheckBox
                android:id="@+id/testBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:checked="false"
                android:layoutDirection="rtl"
                android:layout_marginRight="100dp"

                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/firstText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testingText"
            >

        <TextView
            android:id="@+id/loremIpsumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In placerat, massa non posuere posuere, nisi massa aliquam odio, molestie tempus orci ipsum a lorem. Etiam non finibus lorem. Nullam id dictum arcu. Nulla facilisi. Etiam tempor purus id lacus hendrerit, et ornare sem fringilla. Sed pretium ultrices felis, in egestas nulla commodo sit amet. Cras nec porta odio, ac mattis augue. Duis imperdiet, magna vel efficitur fringilla, nulla nisi luctus risus, nec lobortis nisi tortor sed massa."
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            >
        </TextView>

            <Button
                android:id="@+id/textBtn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/textEditor"
                android:background="@color/colorPrimaryDark"
                android:text="Testing"
                android:gravity="center"
                android:textColor="#FFFF"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                >
            </Button>

            <TextView
                android:id="@+id/secText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In placerat, massa non posuere posuere, nisi massa aliquam odio, molestie tempus orci ipsum a lorem. Etiam non finibus lorem. Nullam id dictum arcu. Nulla facilisi. Etiam tempor purus id lacus hendrerit, et ornare sem fringilla. Sed pretium ultrices felis, in egestas nulla commodo sit amet. Cras nec porta odio, ac mattis augue. Duis imperdiet, magna vel efficitur fringilla, nulla nisi luctus risus, nec lobortis nisi tortor sed massa."
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/testingBtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/testingBtn"
                android:padding="15dp"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstText"
            >

            <Button
                android:id="@+id/fBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/secText"
                android:background="@color/colorPrimaryDark"
                android:text="Testing"
                android:gravity="center"
                android:textColor="#FFFF"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                >
            </Button>

            <Button
                android:id="@+id/sBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/secText"
                android:background="@color/colorPrimaryDark"
                android:text="Testing"
                android:gravity="center"
                android:textColor="#FFFF"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                >
            </Button>

            <Button
                android:id="@+id/tBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/secText"
                android:background="@color/colorPrimary"
                android:text="Testing"
                android:gravity="center"
                android:textColor="#FFFF"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                >
            </Button>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</ScrollView>